#!/usr/bin/env groovy

pipeline {
  agent {
    label 'golang-next'
  }
  environment {
    PROJ_PATH = '/go/src/github.com/vapor-ware/sctl'
    GOVERSION = '1.11'
  }
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Test') {
      steps {
        container('golang'){
          sh 'go test -v'
        }
      }
    }
    stage('Snapshot Build') {
      steps {
        container('golang'){
          sh 'goreleaser release --snapshot --skip-publish --rm-dist'
        }
      }
    }
    stage('Tagged Release') {
      when {
        // example matches: 1.2.3, 1.2.3-dev
        tag pattern: '(0|[1-9]*)\\.(0|[1-9]*)\\.(0|[1-9]*)(-(\\S*))?$', comparator: "REGEXP"
      }
      agent any
      environment {
        GITHUB_TOKEN = credentials('vio-bot-gh-token')
      }
      steps {
        script {
          //TODO: Deprecate the next image once its meged in as the mainline golang builder
          docker.image('vaporio/jenkins-agent-golang:next').inside('-v /var/run/docker.sock:/var/run/docker.sock -v /usr/bin/docker:/usr/bin/docker -e GITHUB_TOKEN=$GITHUB_TOKEN -v $WORKSPACE:$PROJ_PATH --group-add docker') {
            withDockerRegistry(registry: [credentialsId: 'vio-docker-hub']) {
              sh 'goreleaser release --rm-dist'
            }
          }
        }
      }
    }
  }
}
